    "chai": "^3.0.0",
    "codeclimate-test-reporter": "0.1.1",
    "coffee-script": "^1.9.2",
    "coffeeify": "~1.1.0",
    "coffeelint": "^1.10.1",
    "connect-history-api-fallback": "^1.1.0",
    "gulp": "^3.8.11",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-changed": "^1.2.1",
    "gulp-concat": "^2.5.2",
